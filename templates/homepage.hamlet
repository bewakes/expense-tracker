<div .container>
    <div .bs-docs-section>
        <div .row>
            <div .col-lg-12.col-md-12>
                <h3 .text-center>My Expenses
                <div .table-header>
                    <div #month-selector>
                        <a .previous href=@{HomeR}?year=#{show prevYear}&month=#{show prevMonth}> &lt;
                        <span .month>#{formatTime defaultTimeLocale "%B %Y" curr}
                        <a .next href=@{HomeR}?year=#{show nextYear}&month=#{show nextMonth}> &gt;

                    <form method=get action=@{ExpenseNewR}>
                        <button .btn.btn-success.btn-sm>
                            <b style="font-size: 1.6rem">Add an Expense
        <div .row>
            <div .col-md-6.col-sm-12>
                <div .graph #bar-graph-container style="width:100%;height:300px">
            <div .col-md-6>
                <div .graph #pie-chart-container style="width:100%;height:300px">

        <div .row>
            <div .col-md-6>
                <div .graph #cat-bar-graph-container style="width:100%;height:300px">
            <div .col-md-6>

        <h2> Daily details
        <div .row>
            <div .col-lg-12>
                <table .table.table-striped.table-bordered>
                    <thead>
                        <tr>
                            <th>Date
                            <th>Category
                            <th>Amount(NRs.)
                    <tbody>
                        $forall (E.Value amount, E.Value date, E.Value categoryName) <- expenses
                            <tr>
                                <td>#{formatTime defaultTimeLocale "%B %d, %Y" date}
                                <td>#{categoryName}
                                <td>#{amount}
                        <tr>
                            <th>Total
                            <td>
                            <th>#{E.unValue total}
